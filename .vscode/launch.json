            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VULKAN_SDK}/Bin"
                },
                {
                    "name": "VK_INSTANCE_LAYERS",
                    "value": "VK_LAYER_KHRONOS_validation"
                }
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "Build / Tracy / RenderDoc"
        },
        {
            "name": "(LLDB) Debug Target",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "env": {
                "PATH":"${env:PATH}:${command:cmake.getLaunchTargetDirectory}",
                "VK_LAYER_PATH":"${env:VULKAN_SDK}/Bin",
